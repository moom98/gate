{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/absolute/path/to/gate/.claude/hooks/pretooluse-gate.js",
            "timeout": 65000,
            "env": {
              "GATE_BROKER_URL": "http://localhost:3033",
              "GATE_BROKER_TOKEN": "{{REPLACE_WITH_YOUR_TOKEN}}"
            }
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/absolute/path/to/gate/.claude/hooks/pretooluse-gate.js",
            "timeout": 65000,
            "env": {
              "GATE_BROKER_URL": "http://localhost:3033",
              "GATE_BROKER_TOKEN": "{{REPLACE_WITH_YOUR_TOKEN}}"
            }
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "/absolute/path/to/gate/.claude/hooks/pretooluse-gate.js",
            "timeout": 65000,
            "env": {
              "GATE_BROKER_URL": "http://localhost:3033",
              "GATE_BROKER_TOKEN": "{{REPLACE_WITH_YOUR_TOKEN}}"
            }
          }
        ]
      },
      {
        "matcher": "NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "/absolute/path/to/gate/.claude/hooks/pretooluse-gate.js",
            "timeout": 65000,
            "env": {
              "GATE_BROKER_URL": "http://localhost:3033",
              "GATE_BROKER_TOKEN": "{{REPLACE_WITH_YOUR_TOKEN}}"
            }
          }
        ]
      }
    ]
  }
}
